<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>netcoreapp5.0</TargetFramework>
        <RootNamespace>Reimu</RootNamespace>
        <LangVersion>8</LangVersion>
        <RuntimeIdentifiers>win10-x64;ubuntu.18.04-x64</RuntimeIdentifiers>
        <ApplicationIcon>icon.ico</ApplicationIcon>
    </PropertyGroup>
    
    <PropertyGroup Condition="'$(Configuration)' == 'Release'">
        <PublishSingleFile>true</PublishSingleFile>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\ReimuBot.Common\ReimuBot.Common.csproj" />
      <ProjectReference Include="..\VndbSharp\VndbSharp.csproj" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Discord.Net" Version="2.2.0-dev-20200331.2" />
      <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="5.0.0-preview.2.20160.3" />
      <PackageReference Include="RavenDB.Client" Version="4.2.101" />
    </ItemGroup>

</Project>
